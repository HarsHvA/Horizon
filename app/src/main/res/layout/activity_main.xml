<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#000"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/relLayout">
        <com.google.android.material.tabs.TabLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            app:tabTextAppearance="@style/CustomViewAllTab"
            app:tabIndicatorColor="#B4B3B3"
            app:tabIndicator="@drawable/tab_selected_background"
            app:tabIndicatorGravity="stretch"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@android:color/background_light"
            android:id="@+id/tabLayout"/>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginStart="30dp"
            android:layout_height="wrap_content"
            android:elevation="30dp"
            android:backgroundTint="@color/card_color"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:id="@+id/favorite_btn"
                    android:onClick="FavoriteFunction"
                    android:padding="5dp"
                    android:src="@drawable/ic_favorite_black_24dp"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:padding="5dp"
                    android:id="@+id/httpButton"
                    android:onClick="HttpFunction"
                    android:src="@drawable/ic_http_black_24dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:id="@+id/info_btn"
                    android:onClick="InfoFunction"
                    android:padding="5dp"
                    android:src="@drawable/ic_info_black_48dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/search_btn"
                    android:padding="5dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="3dp"
                    android:background="@drawable/ic_search_black_48dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/mainActivityAdView"
        android:id="@+id/view_pager"/>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/mainActivityAdView"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-2115971313461607/4831798667"/>
    </RelativeLayout>
</LinearLayout>