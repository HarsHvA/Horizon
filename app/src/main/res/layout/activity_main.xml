<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/background_main_activity"
    android:background="@drawable/gradientlist"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:id="@+id/relLayout">
        <com.google.android.material.tabs.TabLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_margin="2dp"
            android:layout_marginStart="25dp"
            android:layout_alignParentStart="true"
            app:tabTextAppearance="@style/CustomViewAllTab"
            app:tabIndicatorColor="#B4B3B3"
            app:tabIndicator="@drawable/tab_selected_background"
            app:tabIndicatorGravity="stretch"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@android:color/background_light"
            android:id="@+id/tabLayout"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="end"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/search_btn"
                    android:padding="5dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="3dp"
                    android:background="@drawable/ic_search_black_48dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:id="@+id/info_btn"
                    android:onClick="InfoFunction"
                    android:padding="5dp"
                    android:tint="#727272"
                    android:src="@drawable/ic_more_vert_black_24dp"/>
            </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/view_pager"/>
    </RelativeLayout>
</LinearLayout>